{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "AudioVibe",
  "version": "0.1.0",
  "identifier": "com.khana.audiovibe-desktop",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "AudioVibe - Audiobook Player",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "center": true,
        "maximizable": true,
        "minimizable": true,
        "closable": true,
        "decorations": false,
        "alwaysOnTop": false,
        "fullscreen": false,
        "focus": true,
        "transparent": false,
        "visible": true
      }
    ],
    "security": {
      "csp": "default-src 'self'; style-src 'self' 'unsafe-inline'; font-src 'self' data:; img-src 'self' data: https: blob:; media-src 'self' data: https: blob: file:; script-src 'self' 'unsafe-inline'; connect-src 'self' https: wss:; worker-src 'self' blob:",
      "dangerousDisableAssetCspModification": false,
      "freezePrototype": false,
      "pattern": {
        "use": "brownfield"
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "shortDescription": "Audiobook player and library manager",
    "longDescription": "AudioVibe is a high-performance cross-platform desktop application for playing and managing audiobooks from local files and online sources.",
    "copyright": "Copyright Â© 2025 AudioVibe. All rights reserved.",
    "licenseFile": "../LICENSE"
  }
}
